<WAComponent xmlns="http://silverpeas.org/xml/ns/component"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://silverpeas.org/xml/ns/component https://www.silverpeas.org/xsd/component.xsd">
  <name>survey</name>
  <visible>true</visible>
  <portlet>true</portlet>
  <profiles>
    <profile name="admin">
      <spaceMapping>
        <profile>admin</profile>
      </spaceMapping>
    </profile>
    <profile name="publisher">
      <spaceMapping>
        <profile>publisher</profile>
      </spaceMapping>
    </profile>
    <profile name="userMultiple">
      <spaceMapping>
        <profile>writer</profile>
      </spaceMapping>
    </profile>
    <profile name="user">
      <spaceMapping>
        <profile>reader</profile>
      </spaceMapping>
    </profile>
  </profiles>
  <parameters>
    <parameter>
      <name>usePdc</name>
      <order>1</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
    </parameter>
    <parameter>
      <name>useAnonymousMode</name>
      <order>2</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
    </parameter>
  </parameters>
</WAComponent>