<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.silverpeas.scheduleevent.service.model.beans">
  <class name="DateOption" table="sc_scheduleevent_options">
    <id name="id" column="id" type="string">
      <generator class="uuid" />
    </id>
    <property name="day" column="optionday" type="timestamp" />
    <property name="hour" column="optionhour" type="integer" />
  </class>
</hibernate-mapping>