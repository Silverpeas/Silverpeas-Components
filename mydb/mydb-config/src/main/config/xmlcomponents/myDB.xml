<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>myDB</name>
  <label>
    <message lang="fr">My DB</message>
    <message lang="en">My DB</message>
    <message lang="de">My DB</message>
  </label>
  <description>
    <message lang="fr">Silverpeas permet grâce à « MyDB » de définir et gérer une base de données 
		relationnelle. Le gestionnaire crée sa structure. Les contributeurs saisissent les
		données, les lecteurs les consultent.
	</message>
    <message lang="en">An easy way to create tables, consult, modify or delete data stored in a database.</message>
    <message lang="de">Ein einfacher Weg Tabellen zu erstellen, einsehen, ändern oder Löschen von Daten die in einer Datenbank gespeichert sind.</message>
  </description>
  <suite>
    <message lang="fr">06 Connecteurs</message>
    <message lang="en">06 Connectors</message>
    <message lang="de">06 Verbinder</message>
  </suite>
  <visible>true</visible>
  <portlet>false</portlet>
  <instanceClassName>com.silverpeas.mydb.MyDBInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">
      <label>
        <message lang="fr">Gestionnaires</message>
        <message lang="en">Administrators</message>
        <message lang="de">Administrator</message>
      </label>
      <help>
        <message lang="fr">Les gestionnaires paramètrent les informations de connexion à la base de données.</message>
        <message lang="en">Administrators set up the DB connection's parameters.</message>
        <message lang="de">Administrator</message>
      </help>
    </profile>
    <profile name="publisher">
      <label>
        <message lang="fr">Publieurs</message>
        <message lang="en">Publishers</message>
        <message lang="de">Herausgeber</message>
      </label>
      <help>
        <message lang="fr">Les publieurs écrivent dans la base de données.</message>
        <message lang="en">Publishers write the data base.</message>
        <message lang="de">Herausgeber</message>
      </help>
    </profile>
    <profile name="user">
      <label>
        <message lang="fr">Lecteurs</message>
        <message lang="en">Readers</message>
        <message lang="de">Leser</message>
      </label>
      <help>
        <message lang="fr">Les lecteurs visualisent les données.</message>
        <message lang="en">Readers visualize data.</message>
        <message lang="de">Leser</message>
      </help>
    </profile>
  </profiles>
</WAComponent>
