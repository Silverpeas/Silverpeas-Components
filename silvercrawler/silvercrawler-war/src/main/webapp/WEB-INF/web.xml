<web-app>
  <servlet>
    <display-name>SilverCrawlerRequestRouter</display-name>
    <servlet-name>SilverCrawlerRequestRouter</servlet-name>
    <servlet-class>com.silverpeas.silvercrawler.servlets.SilverCrawlerRequestRouter</servlet-class>
  </servlet>
  <servlet>
    <display-name>SilverCrawlerFileServer</display-name>
    <servlet-name>SilverCrawlerFileServer</servlet-name>
    <servlet-class>com.silverpeas.silvercrawler.servlets.SilverCrawlerFileServer</servlet-class>
  </servlet>
  <servlet>
    <display-name>GoToCrawler</display-name>
    <servlet-name>GoToCrawler</servlet-name>
    <servlet-class>com.silverpeas.silvercrawler.servlets.GoToCrawler</servlet-class>
  </servlet>
  <servlet>
    <display-name>SilverCrawlerDragAndDrop</display-name>
    <servlet-name>SilverCrawlerDragAndDrop</servlet-name>
    <servlet-class>com.silverpeas.silvercrawler.servlets.DragAndDrop</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SilverCrawlerRequestRouter</servlet-name>
    <url-pattern>/RsilverCrawler/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SilverCrawlerFileServer</servlet-name>
    <url-pattern>/SilverCrawlerFileServer/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoToCrawler</servlet-name>
    <url-pattern>/SubDir/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SilverCrawlerDragAndDrop</servlet-name>
    <url-pattern>/SilverCrawlerDragAndDrop/*</url-pattern>
  </servlet-mapping>
</web-app>