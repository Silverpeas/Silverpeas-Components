<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>webSites</name>
  <label>
    <message lang="fr">Designer de sites web</message>
    <message lang="en">WebSite Designer</message>
    <message lang="de">Website-Designer</message>
  </label>
  <description>
    <message lang="fr">Créer des pages web et des répertoires, télécharger des
		images, voilà tout ce dont vous avez besoin pour mettre en ligne de petits sites
		intégrés à la plate-forme.
    </message>
    <message lang="en">A bit like the bookmaks application, but it also allow you to create web pages with a WYSIWYG editor.
    Those pages can be downloaded to create a static web site.
    </message>
    <message lang="de">Ermöglicht es Ihnen, Webseiten mit einem WYSIWYG-Editor zu erstellen. Diese Seiten können heruntergeladen werden, um eine statische Website zu erstellen.</message>
  </description>
  <suite>
    <message lang="fr">04 Gestion de contenu</message>
    <message lang="en">04 Content Management</message>
    <message lang="de">04 Inhaltsverwaltung</message>
  </suite>
  <visible>true</visible>
  <portlet>true</portlet>
  <instanceClassName>com.stratelia.webactiv.webSites.WebSitesInstanciator</instanceClassName>  
  <profiles>
    <profile name="Admin">
      <label>
        <message lang="fr">Gestionnaires</message>
        <message lang="en">Administrators</message>
        <message lang="de">Administrator</message>
      </label>
      <help>
        <message lang="fr">Les gestionnaires gèrent les thèmes et paramètrent le Plan de Classement.</message>
        <message lang="en">Administrators manage topics and set up the Classification Scheme.</message>
        <message lang="de">Administrator</message>
      </help>
    </profile>
    <profile name="Publisher">
      <label>
        <message lang="fr">Publieurs</message>
        <message lang="en">Publishers</message>
        <message lang="de">Herausgeber</message>
      </label>
      <help>
        <message lang="fr">Les publieurs créent ou téléchargent des sites web.</message>
        <message lang="en">Publishers create or upload websites.</message>
        <message lang="de">Herausgeber</message>
      </help>
    </profile>
    <profile name="Reader">
      <label>
        <message lang="fr">Lecteurs</message>
        <message lang="en">Readers</message>
        <message lang="de">Leser</message>
      </label>
      <help>
        <message lang="fr">Les lecteurs consultent les sites web.</message>
        <message lang="en">Readers consult websites.</message>
        <message lang="de">Leser</message>
      </help>
    </profile>
  </profiles>
  <parameters>
    <parameter>
      <name>usePdc</name>
      <label>
        <message lang="fr">Classification PDC</message>
        <message lang="en">Classification Scheme</message>
        <message lang="de">Klassierungsplan</message>
      </label>
      <order>1</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <message lang="fr">Les bookmarks et/ou sites saisis au sein de cette instance pourront être classés sur le Plan de Classement.</message>
        <message lang="en">The bookmarks and websites will be classified on the classification scheme.</message>
        <message lang="de">Die Bookmarks und Webseiten können auf dem KP klassifiziert werden</message>
      </help>
    </parameter>
    <parameter>
      <name>sortedTopics</name>
      <label>
        <message lang="fr">Thèmes / liens ordonés</message>
        <message lang="en">Topics / Links sorted</message>
        <message lang="de">Sortierte Themen / Links</message>
      </label>
      <order>2</order>
      <mandatory>true</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <message lang="fr">Ce paramètre permet d'ordonner les thèmes et les liens</message>
        <message lang="en">This parameter allows to order topics and links.</message>
        <message lang="de">Dieser Parameter ermöglicht es Ihnen, Themen und Links zu Sortieren.</message>
      </help>
    </parameter>
  </parameters>
</WAComponent>
