<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.silverpeas.components</groupId>
		<artifactId>gallery</artifactId>
		<version>5.5</version>
	</parent>

	<groupId>com.silverpeas.components.gallery</groupId>
	<artifactId>gallery-ejb</artifactId>
	<packaging>ejb</packaging>
	<name>EJB gallery</name>

	<dependencies>
		<dependency>
			<groupId>com.silverpeas.core</groupId>
			<artifactId>lib-core</artifactId>
			<version>${core.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-j2ee_1.4_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>node</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>publication</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>silverstatistics</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>comment</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>formtemplate</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.silverpeas.core.ejb-core</groupId>
			<artifactId>searchengine</artifactId>
			<version>${core.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.drewnoakes</groupId>
			<artifactId>metadata-extractor</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.sanselan</groupId>
			<artifactId>sanselan</artifactId>
		</dependency>


		<dependency>
			<groupId>com.silverpeas.core</groupId>
			<artifactId>test-core</artifactId>
			<version>${core.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.properties</include>
				</includes>
				<excludes>
					<exclude>**/*.jpg</exclude>
					<exclude>**/*.xml</exclude>
				</excludes>
			</testResource>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.jpg</include>
					<include>**/*.xml</include>
				</includes>
				<excludes>
					<exclude>**/*.properties</exclude>
				</excludes>
			</testResource>
		</testResources>
	</build>
</project>

