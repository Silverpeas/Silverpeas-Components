<WAComponent xmlns="http://silverpeas.org/xml/ns/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://silverpeas.org/xml/ns/component http://www.silverpeas.org/xsd/component.xsd">
  <name>newsEdito</name>
  <label>
    <message lang="fr">Journal périodique</message>
    <message lang="en">Editorial</message>
    <message lang="de">Periodische Zeitung</message>
  </label>
  <description>
    <message lang="fr">Permet de créer un journal d'entreprise, contenant des articles, éditoriaux, première page.</message>
    <message lang="en">Create an enterprise journal with articles, editorials, first page.</message>
    <message lang="de">Erstellt eine Unternehmen Zeitschrift mit Artikeln, Editorials und Hauptseiten.</message>
  </description>
  <suite>
    <message lang="fr">04 Gestion de contenu</message>
    <message lang="en">04 Content Management</message>
    <message lang="de">04 Inhaltsverwaltung</message>
  </suite>
  <visible>true</visible>
  <portlet>true</portlet>
  <instanceClassName>com.stratelia.webactiv.newsEdito.NewsEditoInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">
      <label>
        <message lang="fr">Gestionnaires</message>
        <message lang="en">Administrators</message>
        <message lang="de">Administrators</message>
      </label>
      <help>
        <message lang="fr">Les gestionnaires gèrent les rubriques, définissent la page d'accueil de chaque parution, publient les parutions.</message>
        <message lang="en">Administrators manage topics, define the home page for each issue and publish issues.</message>
        <message lang="de">Administrators</message>
      </help>
    </profile>
    <profile name="publisher">
      <label>
        <message lang="fr">Rédacteurs</message>
        <message lang="en">Writers</message>
        <message lang="de">Herausgeber</message>
      </label>
      <help>
        <message lang="fr">Les rédacteurs rédigent des articles.</message>
        <message lang="en">Writers create posts</message>
        <message lang="de">Herausgeber</message>
      </help>
    </profile>
    <profile name="user">
      <label>
        <message lang="fr">Lecteurs</message>
        <message lang="en">Readers</message>
        <message lang="de">Leser</message>
      </label>
      <help>
        <message lang="fr">Les lecteurs consultent les parutions.</message>
        <message lang="en">Readers visualize issues.</message>
        <message lang="de">Leser</message>
      </help>
    </profile>
  </profiles>
</WAComponent>