<web-app>
  <servlet>
    <display-name>QuestionReplyRequestRouter</display-name>
    <servlet-name>QuestionReplyRequestRouter</servlet-name>
    <servlet-class>com.silverpeas.questionReply.servlets.QuestionReplyRequestRouter</servlet-class>
  </servlet>
  <servlet>
    <display-name>GoToQuestion</display-name>
    <servlet-name>GoToQuestion</servlet-name>
    <servlet-class>com.silverpeas.questionReply.servlets.GoToQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionReplyRequestRouter</servlet-name>
    <url-pattern>/RquestionReplyPDC/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>QuestionReplyRequestRouter</servlet-name>
    <url-pattern>/RquestionReply/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoToQuestion</servlet-name>
    <url-pattern>/Question/*</url-pattern>
  </servlet-mapping>
</web-app>

