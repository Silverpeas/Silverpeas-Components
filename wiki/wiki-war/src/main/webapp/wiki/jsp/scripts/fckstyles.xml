        <Attribute name="class" value="small" />
    </Style>
    <Style name="Code" element="pre" />
    <Style name="Info" element="div" >
        <Attribute name="class" value="information" />
    </Style>
    <Style name="Warning" element="div" >
        <Attribute name="class" value="warning" />
