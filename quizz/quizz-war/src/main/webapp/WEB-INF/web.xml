<web-app>
  <display-name>Quizz War</display-name>
  <servlet>
    <display-name>QuizzRequestRouter</display-name>
    <servlet-name>QuizzRequestRouter</servlet-name>
    <servlet-class>com.stratelia.webactiv.quizz.servlets.QuizzRequestRouter</servlet-class>
  </servlet>
  <servlet>
    <display-name>GoToQuizz</display-name>
    <servlet-name>GoToQuizz</servlet-name>
    <servlet-class>com.stratelia.webactiv.quizz.servlets.GoToQuizz</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>QuizzRequestRouter</servlet-name>
    <url-pattern>/Rquizz/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoToQuizz</servlet-name>
    <url-pattern>/Survey/*</url-pattern>
  </servlet-mapping>
</web-app>

