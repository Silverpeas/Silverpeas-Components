<WAComponent xmlns="http://silverpeas.org/xml/ns/component"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://silverpeas.org/xml/ns/component file:///home/ehugonnet/silverpeas_dev/core/config-core/src/main/config/xmlcomponents/component.xsd">
  <name>resourcesManager</name>
  <label>
    <fr>Gestion de ressources</fr>
    <en>Resources manager</en>
  </label>
  <description>
    <fr>Ce composant permet de gérer ses ressources matérielles et de les réserver.</fr>
    <en>This comonents manages physical resources and how tobook them.</en>
  </description>
  <suite>
    <fr>02 Gestion Collaborative</fr>
    <en>02 Collaborative Management</en>
  </suite>
  <visible>Y</visible>
  <portlet>N</portlet>
  <instanceClassName>com.silverpeas.resourcesmanager.ResourcesManagerInstanciator</instanceClassName>
  <profiles>
    <profile name="admin">
      <fr>Gestionnaire</fr>
      <en>Administrator</en>
    </profile>
    <profile name="responsable">
      <fr>Responsable</fr>
      <en>In charge</en>
    </profile>
    <profile name="publisher">
      <fr>Lecteur</fr>
      <en>Reader</en>
    </profile>
    <!-- <profile name="user">Lecteur</profile> -->
  </profiles>
  <parameters>
    <parameter>
      <name>comments</name>
      <label>
        <fr>Commentaires</fr>
        <en>Comments</en>
      </label>
      <order>1</order>
      <mandatory>Y</mandatory>
      <value>yes</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Les lecteurs peuvent laisser des commentaires sur les ressources.</fr>
        <en>Readers are able to post comments on resource.</en>
      </help>
    </parameter>
    <parameter>
      <name>weekendNotVisible</name>
      <label>
        <fr>Masquer les week-ends</fr>
        <en>Hide week-ends</en>
      </label>
      <order>2</order>
      <mandatory>Y</mandatory>
      <value>no</value>
      <type>checkbox</type>
      <updatable>always</updatable>
      <help>
        <fr>Permet d'alléger l'interface et d'optimiser l'affichage du reste de la semaine.</fr>
        <en>Optimize the GUI by not displaying week-ends.</en>
      </help>
    </parameter>
  </parameters>
</WAComponent>
